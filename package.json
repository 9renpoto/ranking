{
  "name": "@app/ranking",
  "version": "0.0.1",
  "private": true,
  "description": "TBD",
  "license": "WTFPL",
  "repository": "ssh://git@github.com/g59/ranking.git",
  "author": "9renpoto",
  "scripts": {
    "build": "lerna run build --include-dependents",
    "bump": "lerna version --no-git-tag-version --no-push && lerna-changelog",
    "clean": "rimraf lib .tmp && lerna run clean && lerna clean --y",
    "lint": "run-p -l lint:*",
    "lint:es": "eslint . --ext=ts,tsx",
    "lint:prettier": "prettier --check '{packages,apps}/**/*.{js,ts,tsx}?'",
    "lint:stylelint": "stylelint '{packages,apps}/**/*.tsx' -s css-in-js",
    "lint:tsc": "tsc -p . --noEmit",
    "test": "jest"
  },
  "dependencies": {
    "@babel/core": "^7.8.4",
    "@lingui/macro": "2.9.1",
    "@lingui/react": "^2.9.0",
    "@primer/components": "^18.0.0",
    "@primer/octicons-react": "^10.0.0",
    "@types/lingui__react": "^2.8.1",
    "@types/styled-components": "^5.0.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-lodash": "^3.3.4",
    "lerna": "^3.19.0",
    "next": "^9.2.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.1",
    "styled-components": "^5.0.1",
    "typescript": "^4.0.0",
    "typescript-styled-plugin": "^0.15.0"
  },
  "devDependencies": {
    "@9renpoto/eslint-config-react": "7.0.3",
    "@9renpoto/eslint-config-typescript": "7.0.3",
    "@9renpoto/stylelint-config": "7.0.3",
    "@lingui/cli": "2.9.1",
    "@storybook/addon-essentials": "6.0.17",
    "@storybook/addon-storyshots": "6.0.17",
    "@storybook/react": "6.0.17",
    "@types/enzyme": "3.10.5",
    "@types/enzyme-adapter-react-16": "1.0.6",
    "@types/enzyme-to-json": "1.5.3",
    "@types/faker": "4.1.12",
    "@types/jest": "26.0.10",
    "@types/jest-specific-snapshot": "0.5.4",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "26.3.0",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.3",
    "enzyme-to-json": "3.5.0",
    "eslint": "7.7.0",
    "eslint-plugin-jest": "23.20.0",
    "faker": "4.1.0",
    "husky": "4.2.5",
    "jest": "26.4.2",
    "jest-environment-enzyme": "7.1.2",
    "jest-enzyme": "7.1.2",
    "jest-specific-snapshot": "4.0.0",
    "jest-styled-components": "7.0.3",
    "lerna-changelog": "1.0.1",
    "lint-staged": "10.2.11",
    "prettier": "2.1.0",
    "prettier-plugin-organize-imports": "1.1.1",
    "prettier-plugin-package": "1.0.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "stylelint": "13.6.1",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.10.0"
  },
  "eslintConfig": {
    "extends": [
      "@9renpoto/eslint-config-react",
      "@9renpoto/eslint-config-typescript"
    ],
    "plugins": [
      "jest"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/**/src/**/*.{ts,tsx}",
      "apps/**/src/**/*.{ts,tsx}"
    ],
    "setupFilesAfterEnv": [
      "jest-enzyme",
      "jest-styled-components"
    ],
    "testEnvironment": "enzyme"
  },
  "lingui": {
    "sourceLocale": "en",
    "localeDir": "./apps/web/app/locale",
    "srcPathDirs": [
      "./apps",
      "./packages"
    ],
    "format": "po"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.tsx": [
      "stylelint --fix -s css-in-js"
    ],
    "*.{md,js,json}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": [
      "@9renpoto/stylelint-config",
      "stylelint-config-prettier",
      "stylelint-config-recommended",
      "stylelint-config-styled-components"
    ]
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
