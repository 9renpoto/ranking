{
  "name": "rate",
  "version": "0.0.1",
  "private": true,
  "description": "TBD",
  "license": "MIT",
  "repository": "ssh://git@github.com/g59/rate.git",
  "author": "9renpoto",
  "scripts": {
    "build": "lerna run build --include-dependents",
    "bump": "lerna version --no-git-tag-version --no-push && lerna-changelog",
    "clean": "rimraf lib .tmp && lerna run clean && lerna clean --y",
    "lint": "run-p -l lint:*",
    "lint:es": "eslint . --ext=ts,tsx",
    "lint:prettier": "prettier --check '{packages,apps}/**/*.tsx'",
    "lint:stylelint": "stylelint '{packages,apps}/**/*.tsx'",
    "lint:tsc": "tsc -p . --noEmit",
    "test": "jest"
  },
  "dependencies": {
    "@babel/core": "^7.7.7",
    "@lingui/babel-preset-react": "^2.9.0",
    "@lingui/react": "^2.9.0",
    "@primer/components": "^15.0.1",
    "@primer/octicons-react": "^9.3.1",
    "@types/lingui__react": "^2.8.1",
    "@types/styled-components": "^4.4.1",
    "lerna": "^3.19.0",
    "module-alias": "^2.2.2",
    "next": "^9.1.6",
    "npm-run-all": "^4.1.5",
    "preact": "^10.1.1",
    "preact-render-to-string": "^5.1.3",
    "preact-ssr-prepass": "^1.0.0",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "rimraf": "^3.0.0",
    "styled-components": "^4.4.1",
    "typescript": "^3.7.4",
    "typescript-styled-plugin": "^0.15.0"
  },
  "devDependencies": {
    "@9renpoto/eslint-config-react": "5.5.1",
    "@9renpoto/eslint-config-typescript": "5.4.0",
    "@9renpoto/stylelint-config": "5.4.0",
    "@lingui/cli": "2.9.0",
    "@lingui/macro": "2.9.0",
    "@storybook/addon-actions": "5.2.8",
    "@storybook/addon-storyshots": "5.2.8",
    "@storybook/addon-viewport": "5.2.8",
    "@storybook/react": "5.2.8",
    "@types/faker": "4.1.8",
    "@types/jest": "24.0.25",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "24.9.0",
    "babel-loader": "8.0.6",
    "babel-plugin-macros": "2.8.0",
    "eslint": "6.8.0",
    "eslint-plugin-jest": "23.3.0",
    "faker": "4.1.0",
    "husky": "4.0.7",
    "jest": "24.9.0",
    "jest-specific-snapshot": "2.0.0",
    "jest-styled-components": "6.3.4",
    "lerna-changelog": "1.0.0",
    "lint-staged": "9.5.0",
    "preact-render-to-json": "3.6.6",
    "prettier-eslint-cli": "5.0.0",
    "prettier-plugin-package": "0.3.1",
    "prettier-plugin-toml": "0.3.1",
    "react-test-renderer": "16.12.0",
    "require-context.macro": "1.2.2",
    "stylelint": "13.0.0",
    "stylelint-config-prettier": "8.0.0",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.9.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/**/src/**/*.{ts,tsx}",
      "apps/**/src/**/*.{ts,tsx}"
    ],
    "setupFiles": [
      "<rootDir>/.jest/setup.js"
    ],
    "setupFilesAfterEnv": [
      "jest-styled-components"
    ]
  },
  "lingui": {
    "sourceLocale": "en",
    "localeDir": "./apps/web/app/locale",
    "srcPathDirs": [
      "./apps",
      "./packages"
    ],
    "format": "po"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier-eslint --write",
      "git add"
    ],
    "*.{md,js,json,toml}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
